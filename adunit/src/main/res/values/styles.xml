<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="IQL.Button" parent="">
        <item name="cornerRadius">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">240dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/button</item>
    </style>

    <style name="btn">
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomLeft">28dp</item>
        <item name="cornerSizeBottomRight">28dp</item>
    </style>


    <style name="button" >
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-.02</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="backgroundColor">@color/iql_secondary</item>
        <item name="fontWeight">700</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="subtitle_1">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="lineHeight">20sp</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="headline_9">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">0sp</item>
<!--        <item name="fontWeight">@integer/weight_regular</item>-->
        <item name="fontStyle">normal</item>
        <item name="lineHeight">24sp</item>
    </style>


    <style name="body_3">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">13sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="body_2">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">18sp</item>
        <item name="android:lineSpacingExtra">-0.08sp</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="headline_6">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineHeight">22sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="fontWeight">700</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Widget.ZWL.PiTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeErrorColor">@color/error_red</item>
        <item name="errorTextColor">@color/error_red</item>
    </style>

    <style name="subtitle_2">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="fontStyle">normal</item>
    </style>

</resources>